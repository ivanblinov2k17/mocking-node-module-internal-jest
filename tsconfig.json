{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "noImplicitAny": false,
        "types": [
            "@intlify/vite-plugin-vue-i18n/client",
            "vite/client",
            "jest",
            "node",
            "@types/lodash",
            "vitest/globals"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "strictNullChecks": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/tests/mocks.js"
    ]
}